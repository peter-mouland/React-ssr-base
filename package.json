{
  "name": "react-ssr-base",
  "version": "0.0.0",
  "description": "",
  "main": "src/server-entry.js",
  "scripts": {
    "postinstall": "npm run build",
    "mongo": "mongod  --dbpath mongodb",
    "build": "rm -rf compiled && npm run compile:server && npm run compile && node scripts/copyAssets.js",
    "compile": "webpack --config src/config/webpack.config.prod.js",
    "compile:prod": "NODE_ENV=production npm run compile",
    "compile:dev": "webpack --config src/config/webpack.config.dev.js",
    "compile:server": "NODE_ENV=production babel src -d compiled",
    "start": "node compiled/server-entry.js",
    "start:prod": "NODE_ENV=production npm run start",
    "start:dev": "nodemon src/server-entry.js",
    "lint": "sass-lint -v -q -c ./sass-lint.yml && eslint 'src/**/*.js'",
    "test": "npm run test:unit && npm run test:func",
    "test:unit": "npm run mocha -- 'src/**/*.spec.js'",
    "test:func": "npm run mocha -- 'tests/**/*.func.js'",
    "test:e2e": "npm run test:e2e-local",
    "test:e2e-local": "npm run nightwatch -- --env local --tag staging",
    "test:e2e-production": "npm run nightwatch -- --env chrome_win --tag production",
    "test:e2e-staging": "npm run nightwatch -- --env safari_osx,chrome_osx,firefox_win,firefox_osx,IE11,edge --tag staging",
    "prenightwatch": "selenium-standalone install --version=3.0.1",
    "nightwatch": "nightwatch -o ./tests/e2e/tests_output -c ./tests/config/nightwatch.conf.js",
    "mocha": "mocha --opts ./tests/config/mocha.opts "
  },
  "engines": {
    "node": "^9.3.0",
    "npm": "^5.10.10",
    "yarn": "^1.0.0"
  },
  "pre-commit": [
    "lint",
    "test"
  ],
  "pre-push": [
    "build",
    "test:e2e"
  ],
  "author": "Peter Mouland",
  "license": "ISC",
