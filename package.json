{
  "name": "react-lego",
  "version": "0.0.0",
  "description": "",
  "main": "src/server-entry.js",
  "scripts": {
    "postinstall": "npm run build:dll",
    "prestart": "rm -rf compiled && npm run build:dll && npm run build:server && npm run build",
    "prestart:dev": "npm run build:dev",
    "pretest:e2e": "npm run build",
    "build": "NODE_ENV=production webpack --config src/config/webpack.config.prod.js -p",
    "build:dll": "NODE_ENV=production webpack --config src/config/webpack.dll.js -p",
    "build:dev": "webpack --config src/config/webpack.config.dev.js",
    "build:server": "NODE_ENV=production babel src -d compiled && node scripts/copyAssets.js",
    "start": "NODE_ENV=production node compiled/server-entry.js",
    "start:dev": "nodemon src/server-entry.js --ignore . --exec babel-node",
    "lint": "sass-lint -v -q -c ./sass-lint.yml && eslint 'src/**/*.js'",
    "test": "npm run test:unit && npm run test:func",
    "test:unit": "npm run mocha -- 'src/**/*.spec.js'",
    "test:func": "npm run mocha -- 'tests/functional/**/*.func.js'",
    "test:e2e": "npm run nightwatch -- --env local",
    "test:e2e-smoke": "npm run nightwatch -- --env chrome_win --tag smoke",
    "test:e2e-xb": "npm run nightwatch -- --env safari_osx,chrome_osx,firefox_win,firefox_osx,IE10,IE11,edge",
    "prenightwatch": "selenium-standalone install --version=2.53.1 && npm run prestart",
    "nightwatch": "NODE_ENV=production nightwatch -o ./tests/e2e/tests_output -c ./tests/config/nightwatch.conf.js",
    "mocha": "mocha --opts ./tests/config/mocha.opts "
  },
  "engines": {
    "node": "^6.6.0",
    "npm": "^3.10.3"
  },
  "pre-commit": [
    "lint",
    "test"
  ],
  "pre-push": [
    "test:e2e"
  ],
  "author": "Peter Mouland",
  "license": "ISC",
  "dependencies": {
    "autoprefixer": "^6.3.1",
    "babel-core": "^6.8.0",
    "babel-loader": "^6.2.4",
    "babel-plugin-add-module-exports": "^0.2.0",
    "babel-plugin-transform-class-properties": "^6.8.0",
    "babel-plugin-transform-object-assign": "^6.8.0",
    "babel-plugin-transform-object-rest-spread": "^6.8.0",
    "babel-plugin-transform-require-ignore": "0.0.2",
    "babel-polyfill": "^6.8.0",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-react": "^6.5.0",
    "chokidar": "^1.6.1",
    "classnames": "^2.2.3",
    "css-loader": "^0.25.0",
    "cssnano": "^3.5.2",
    "debug": "^2.2.0",
    "extract-text-webpack-plugin": "^2.0.0-beta.4",
    "isomorphic-fetch": "^2.2.1",
    "koa": "^2.0.0-alpha.7",
    "koa-body": "^2.0.0",
    "koa-compress": "^2.0.0",
    "koa-router": "^7.0.1",
    "koa-static": "^3.0.0",
    "lodash": "^4.1.0",
    "node-hook": "^0.4.0",
    "node-sass": "^3.4.2",
    "postcss-loader": "^0.13.0",
    "react": "^15.1.0",
    "react-document-meta": "^2.0.2",
    "react-dom": "^15.1.0",
    "react-redux": "^4.4.5",
    "react-router": "^4.0.0-5",
    "react-router-addons-routes": "0.0.2",
    "react-router-redux": "^4.0.5",
    "redux": "^3.5.2",
    "redux-logger": "^2.6.1",
    "redux-promise-middleware": "^4.1.0",
    "redux-thunk": "^2.1.0",
    "sass-loader": "^4.0.2",
    "style-loader": "^0.13.0",
    "svg-inline-loader": "^0.7.1",
    "webpack": "^2.1.0-beta.28",
    "yargs": "^6.0.0"
  },
  "devDependencies": {
    "babel-cli": "^6.14.0",
    "babel-eslint": "^7.0.0",
    "babel-plugin-transform-async-to-generator": "^6.16.0",
    "babel-preset-react-hmre": "^1.1.1",
    "browserstack-local": "^1.1.0",
    "chai": "^3.5.0",
    "chai-enzyme": "^0.5.2",
    "chance": "^1.0.4",
    "chromedriver": "2.24.1",
    "enzyme": "^2.3.0",
    "eslint": "^3.5.0",
    "eslint-config-airbnb": "^12.0.0",
    "eslint-plugin-babel": "^3.0.0",
    "eslint-plugin-import": "^2.0.0",
    "eslint-plugin-jsx-a11y": "^2.2.2",
    "eslint-plugin-react": "^6.2.2",
    "fs-extra": "^0.30.0",
    "glob": "^7.1.1",
    "jsdom": "^9.2.1",
    "koa-webpack": "^0.1.9",
    "koa-webpack-dev-middleware": "^1.2.2",
    "koa-webpack-hot-middleware": "^1.0.3",
    "koa-webpack-middleware": "^1.0.3",
    "mocha": "^3.1.0",
    "nightwatch": "^0.9.0",
    "nightwatch-html-reporter": "^1.0.3",
    "nodemon": "^1.10.2",
    "pre-commit": "^1.1.2",
    "pre-push": "^0.1.1",
    "react-addons-test-utils": "^15.1.0",
    "react-hot-loader": "^3.0.0-beta.6",
    "sass-lint": "^1.5.1",
    "selenium-standalone": "^5.6.4",
    "sinon": "^1.17.3",
    "supertest": "^2.0.0"
  }
}
